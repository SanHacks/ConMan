<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">con_man_listing.con_man_listing_data_source</item>
            <item name="deps" xsi:type="string">con_man_listing.con_man_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New</label>
            </button>
        </buttons>
        <spinner>con_man_listing_columns</spinner>
        <deps>
            <dep>con_man_listing.con_man_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="con_man_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">con_man_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>SageBytez_ConMan::management</aclResource>
        <dataProvider class="SageBytez\ConMan\Ui\DataProvider\ConManDataProvider" name="con_man_listing_data_source">
            <settings>
                <requestFieldName>con_man_id</requestFieldName>
                <primaryFieldName>con_man_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="con_man_listing_columns">
        <column name="con_man_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="product_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Product Id</label>
            </settings>
        </column>
        <column name="store_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Store Id</label>
            </settings>
        </column>
        <column name="customer_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Customer Id</label>
            </settings>
        </column>
        <column name="customer_group">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Customer Group</label>
            </settings>
        </column>
        <column name="category">
            <settings>
                <filter>text</filter>
                <label translate="true">Category</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="SageBytez\ConMan\Ui\Component\Listing\Column\ConManBlockActions">
            <settings>
                <indexField>con_man_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
