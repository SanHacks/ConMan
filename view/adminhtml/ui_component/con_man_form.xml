<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">con_man_form.con_man_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Con Man Form</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <namespace>con_man_form</namespace>
        <dataScope>data.general</dataScope>
        <deps>
            <dep>con_man_form.con_man_form_data_source</dep>
        </deps>
        <buttons>
            <button name="save" class="SageBytez\ConMan\Block\Form\ConMan\Save"/>
            <button name="back" class="SageBytez\ConMan\Block\Form\ConMan\Back"/>
            <button name="delete" class="SageBytez\ConMan\Block\Form\ConMan\Delete"/>
        </buttons>
    </settings>
    <dataSource name="con_man_form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="con_man/conman/save"/>
        </settings>
        <dataProvider class="SageBytez\ConMan\Ui\DataProvider\ConManDataProvider" name="con_man_form_data_source">
            <settings>
                <requestFieldName>con_man_id</requestFieldName>
                <primaryFieldName>con_man_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">General</label>
        </settings>
        <field name="con_man_id" sortOrder="0" formElement="hidden">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">con_man_id</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Entity ID</label>
                <dataScope>con_man_id</dataScope>
            </settings>
        </field>
        <field name="product_id" sortOrder="00" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">product_id</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Product Id</label>
                <dataScope>product_id</dataScope>
            </settings>
        </field>
        <field name="store_id" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">store_id</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Store Id</label>
                <dataScope>store_id</dataScope>
            </settings>
        </field>
        <field name="customer_id" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer_id</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Customer Id</label>
                <dataScope>customer_id</dataScope>
            </settings>
        </field>
        <field name="customer_group" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer_group</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Customer Group</label>
                <dataScope>customer_group</dataScope>
            </settings>
        </field>
        <field name="category" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">category</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <label translate="true">Category</label>
                <dataScope>category</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
